{
  "name": "angular-17-icp-azle-ii",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:dev": "npm run start-clean && npm run build:all-canisters && dfx generate && ng serve",
    "build:dev": "export NODE_ENV=development && ng build --configuration development",
    "dev": "dfx stop && dfx start --background --host 127.0.0.1:8000 && ng serve",
    "deploy:local": "npm run start-clean && dfx canister create motoko && dfx canister create azle_hello_world && npm run build:dev && dfx deploy && npm run build:ii",
    "deploy:ic": "npm run restart:dfx && npm run build:prod && dfx deploy --network ic --no-wallet",
    "start-clean": "dfx stop && dfx start --background --host 127.0.0.1:8000 --clean",
    "dfx:start": "dfx stop && dfx start --background --host 127.0.0.1:8000",
    "start": "ng serve",
    "build": "ng build --configuration development",
    "build:all-canisters": "dfx deploy && build:ii",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "restart:dfx": "dfx stop && dfx start --background",
    "build:prod": "export NODE_ENV=production && ng build --configuration production",
    "build:ii": "dfx deps pull && dfx deps init internet_identity --argument '(null)' && dfx deps deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@dfinity/agent": "^0.21.2",
    "@dfinity/auth-client": "^0.21.2",
    "azle": "^0.19.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "process": "^0.11.10",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "webpack": "^5.89.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^17.0.0",
    "@angular-devkit/build-angular": "^17.0.10",
    "@angular/cli": "^17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.11.5",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.3.2"
  }
}
